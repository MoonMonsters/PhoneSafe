<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_ccleaner_child_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_main_bingdu"
        />
    <TextView
        android:id="@+id/tv_item_ccleaner_child_name"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="应用名称"
        android:gravity="left"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_item_ccleaner_child_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.00MB"
        />

    <RadioButton
        android:id="@+id/cb_item_ccleaner_child_select"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content" />

</LinearLayout>